<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PickerView">

        <!--        展示数据数量-->
        <attr name="showDataSize" format="integer" />
        <!--        第一个数据偏移量-->
        <attr name="firstDataTransX" format="dimension" />
        <!--        中间数据偏移量-->
        <attr name="centerDataTransX" format="dimension" />
        <!--        第一个数据颜色-->
        <attr name="firstDataTextColor" format="color" />
        <!--        中间数据颜色-->
        <attr name="centerDataTextColor" format="color" />
        <!--        第一个数据字体大小-->
        <attr name="firstDataTextSize" format="dimension" />
        <!--        中间数据字体大小-->
        <attr name="centerDataTextSize" format="dimension" />
        <!--        展示位置 -->
        <attr name="showStyle" format="enum">
            <enum name="CENTER" value="0" />
            <enum name="LEFT" value="1" />
            <enum name="RIGHT" value="2" />
        </attr>
        <!--        是否可以循环-->
        <attr name="loopAble" format="boolean" />
        <!--        高度间距-->
        <attr name="itemHeight" format="dimension" />

        <!--        分割线高度-->
        <attr name="diverLineWidth" format="dimension" />
        <attr name="diverLineHeight" format="dimension" />
        <!--        分割线颜色-->
        <attr name="diverLineColor" format="color" />
        <!--        分割线半径-->
        <attr name="diverLineRadius" format="dimension" />

    </declare-styleable>

</resources>