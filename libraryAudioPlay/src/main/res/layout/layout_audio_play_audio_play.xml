<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_play"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:clickable="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/style_gr" />

    <View

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="22dp"
        android:background="#FFFFFF" />


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:padding="4dp"
        android:src="@drawable/bottom_audio_close" />


    <com.waterfairy.media.audio.play.AudioPlayButtonView
        android:id="@+id/bt_play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/iv_loading"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_style_round_white_17dp"
        android:clickable="true"
        android:src="@drawable/bottom_audio_loading"
        android:tint="@color/main_color" />

    <SeekBar
        android:id="@+id/progress_bar"
        style="@style/AudioPlaySeekBarStyle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/bt_play"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/time_total"
        android:layout_toRightOf="@+id/time_current"
        android:max="100"
        android:progress="10" />

    <TextView
        android:id="@+id/time_current"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/bt_play"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:hint="00:00"
        android:paddingRight="10dp"
        android:text="00:00"
        android:textColor="@color/main_color"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/time_total"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/bt_play"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:hint="00:00"
        android:paddingRight="10dp"
        android:text="00:00"
        android:textColor="@color/main_color"
        android:textSize="14dp" />
</RelativeLayout>

